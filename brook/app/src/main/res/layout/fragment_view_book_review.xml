<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/bookPic"
        android:layout_width="172dp"
        android:layout_height="168dp"
        android:layout_marginTop="120dp"
        android:scaleType="centerCrop"
        android:contentDescription="Book picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_add_photo_alternate_24" />


    <TextView
        android:id="@+id/textBookDescription"
        android:layout_width="352dp"
        android:layout_height="105dp"
        android:background="@drawable/rounded_edittext"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Your review"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookPic"
        app:layout_constraintVertical_bias="0.488" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textBookDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookPic"
        app:layout_constraintVertical_bias="0.523">

        <ImageView
            android:id="@+id/star1EditBookReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/baseline_empty_star_border_24"
            android:tag="1" />

        <ImageView
            android:id="@+id/star2EditBookReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/baseline_empty_star_border_24"
            android:tag="2" />

        <ImageView
            android:id="@+id/star3EditBookReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/baseline_empty_star_border_24"
            android:tag="3" />

        <ImageView
            android:id="@+id/star4EditBookReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/baseline_empty_star_border_24"
            android:tag="4" />

        <ImageView
            android:id="@+id/star5EditBookReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/baseline_empty_star_border_24"
            android:tag="5" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>